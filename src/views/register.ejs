<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
    <link rel="icon" href="/css/images/paw_icon.ico" type="image/x-icon">
</head>

<body>

    <!-- Header -->
    <header class="header text-center position-relative">
        <h1>Welcome to Cat's Home</h1>
        <div class="position-absolute top-0 end-0 m-3">
            <button id="backHomeBtn" class="btn btn-secondary mt-3">Volver al Inicio</button>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container my-4">
        <h1 class="text-center">Registro</h1>
        <form action="/register" method="POST" class="w-50 mx-auto">
            <% if (error) { %>
                <div class="mb-3 alert alert-danger">
                    <%= error %>
                </div>
                <% } %>
                    <div class="mb-3">
                        <label for="username" class="form-label">Nombre de usuario:</label>
                        <input type="text" id="username" name="username" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Correo electrónico:</label>
                        <input type="email" id="email" name="email" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Contraseña:</label>
                        <input type="password" id="password" name="password" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Registrarse</button>
        </form>
    </div>

    <!-- Footer -->
    <footer class="text-center bg-dark text-white py-3">
        ©2025 The Cat API - Just for Fun.
    </footer>
    <script>
        document.getElementById('backHomeBtn').addEventListener('click', () => {
            window.location.href = '/';
        });
    </script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>