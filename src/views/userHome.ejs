<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página Principal del Usuario</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
    <link rel="icon" href="/css/images/paw_icon.ico" type="image/x-icon">
</head>

<body>
    <!-- Header -->
    <header class="header text-center bg-dark text-white py-3">
        <h1>Welcome <%= username %></h1>
        <div class="position-absolute top-0 end-0 m-3">
            <button id="logoutBtn" class="btn btn-danger">Cerrar Sesión</button>
        </div>
        
    </header>

    <!-- Main Content -->
    <div class="container-fluid my-4">
        <div class="row">
            <!-- Aside Left (Buscar Razas) -->
            <aside class="col-md-3">
                <h2>Buscar Razas</h2>
                <input type="text" id="breedSearch" class="form-control mb-3" placeholder="Buscar raza...">
                <ul id="breedList" class="list-group">
                    <% breeds.forEach(breed => { %>
                        <li class="list-group-item">
                            <a href="#" class="breed-link" data-breed-id="<%= breed.id %>"><%= breed.name %></a>
                        </li>
                    <% }); %>
                </ul>
            </aside>
            
            <!-- Main Center (Tarjeta de Raza Seleccionada y Favoritos) -->
            <main class="col-md-9">
                <div class="row">
                    <!-- Favoritos -->
                    <div class="col-12 mb-4">
                        <h2>Tus Favoritos</h2>
                        <ul id="favoritesList" class="list-group">
                            <% if (favorites.length > 0) { %>
                                <% favorites.forEach(favorite => { %>
                                    <li class="list-group-item">Raza: <%= favorite.breedName %></li>
                                <% }) %>
                            <% } else { %>
                                <li class="list-group-item">No tienes favoritos.</li>
                            <% } %>
                        </ul>
                    </div>
                    
                    <!-- Tarjeta de Raza Seleccionada -->
                    <div class="col-12">
                        <div id="selectedBreedCard" class="card mt-4" style="display:none;">
                            <div class="card-body">
                                <h5 class="card-title" id="breedName"></h5>
                                <img id="breedImage" class="img-fluid mb-3" style="max-width: 300px; display: block; margin: 0 auto;">
                                <p class="card-text" id="breedDescription"></p>
                                <button class="btn btn-primary" id="addFavoriteBtn">Añadir a Favoritos</button>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/userHome.js"></script>
</body>

</html>
