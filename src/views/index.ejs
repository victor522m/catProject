<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Página de Inicio - The Cat API</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
  <link rel="icon" href="/css/images/paw_icon.ico" type="image/x-icon">
</head>
<body>

<!-- Header -->
<header class="header text-center">
  <h1>Welcome to Cat's Home</h1>
</header>

<!-- Main Content -->
<div class="container my-4">
  <div class="row">
    <!-- Carrusel -->
    <div class="col-lg-8 mb-4">
      <div id="catCarousel" class="carousel slide" data-bs-ride="carousel">
        <!-- Contenido del Carrusel -->
        <div class="carousel-inner">
          <% catImages.forEach((imageUrl, index) => { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
              <img src="<%= imageUrl %>" class="d-block w-100" alt="Gato <%= index + 1 %>">
            </div>
          <% }); %>
        </div>

        <!-- Controles -->
        <button class="carousel-control-prev" type="button" data-bs-target="#catCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#catCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
        </button>
      </div>
    </div>

    <!-- Aside -->
    <aside class="col-lg-4 mb-4">
      <h4>Search Breeds</h4>
      <input type="text" id="breedSearch" class="form-control mb-3" placeholder="Search breed...">
      <ul id="breedList" class="list-group">
        <% breeds.forEach(breed => { %>
          <li class="list-group-item">
            <!-- Enlace a los detalles de la raza -->
            <a href="/breeds/<%= breed.id %>" class="text-decoration-none"><%= breed.name %></a>
          </li>
        <% }); %>
      </ul>
    </aside>
  </div>
</div>

<!-- Footer -->
<footer class="text-center bg-dark text-white py-3">
  ©2025 The Cat API - Just for Fun.
</footer>

<!-- Bootstrap JS Bundle con Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/main.js"></script>
</body>
</html>
